#!/usr/bin/env groovy
def user_id
def group_id
node {
  // uid / gid de l'utilisateur courant
  user_id = sh(returnStdout: true, script: 'id -u').trim()
  group_id = sh(returnStdout: true, script: 'id -g').trim()
  // uid / gid de l'utilisateur Docker
  DOCKER_UID = 2000
  DOCKER_GID = 2000
}
pipeline {
  options {
    disableConcurrentBuilds()
    buildDiscarder(logRotator(numToKeepStr: '10'))
  }
  parameters {
    // Version de l'application
    string(name: 'COMMIT_TO_BUILD', defaultValue: 'master', description: 'Commit, branche ou tag')
    // uid / gid de l'utilisateur Docker
    string(name: 'DOCKER_UID', defaultValue: '2000', description: 'Identifiant de l\'utilisateur Docker')
    string(name: 'DOCKER_GID', defaultValue: '2000', description: 'Identifiant du groupe de l\'utilisateur Docker')
    // Version de l'application
    string(name: 'REMOCRA_VERSION', description: 'Version du package')
    // registry Docker
    string(name: 'REGISTRY_DOCKER', defaultValue: 'https://client-docker-registry.atolcd.com', description: 'Registry de destination (NEXUS)')
  }
  agent {
    label 'release'
  }
  stages {
    stage('Get version') {
      steps {
        script {
          echo "Version  ( ${REMOCRA_VERSION})"
        }
      }
    }
    stage('Dependencies') {
      failFast true
      parallel {
        stage('Dependencies geoserver') {
          steps {
            script {
              withCredentials([usernameColonPassword(credentialsId: 'nexus3-jenkins', variable: 'NEXUS3_AUTH')]) {
                sh '[ -f docker/geoserver/ext/geoserver-2.16.2-bin.zip ] || curl --user "$NEXUS3_AUTH" -o docker/geoserver/ext/geoserver-2.16.2-bin.zip https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/geoserver-2.16.2-bin.zip'
                sh '[ -f docker/geoserver/ext/geoserver-2.16.2-querylayer-plugin.zip ] || curl --user "$NEXUS3_AUTH" -o docker/geoserver/ext/geoserver-2.16.2-querylayer-plugin.zip https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/geoserver-2.16.2-querylayer-plugin.zip'
                sh '[ -f docker/geoserver/ext/jai-1_1_3-lib-linux-amd64.tar.gz ] || curl --user "$NEXUS3_AUTH" -o docker/geoserver/ext/jai-1_1_3-lib-linux-amd64.tar.gz https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/jai-1_1_3-lib-linux-amd64.tar.gz'
                sh '[ -f docker/geoserver/ext/jai_imageio-1_1-lib-linux-amd64.tar.gz ] || curl --user "$NEXUS3_AUTH" -o docker/geoserver/ext/gjai_imageio-1_1-lib-linux-amd64.tar.gz https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/jai_imageio-1_1-lib-linux-amd64.tar.gz'
              }
            }
          }
        }
        stage('Dependencies pdi-4.4-dkron') {
          steps {
            script {
              withCredentials([usernameColonPassword(credentialsId: 'nexus3-jenkins', variable: 'NEXUS3_AUTH')]) {
                sh '[ -f docker/pdi-4.4-dkron/ext/pdi-ce-4.4.0-stable.zip ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-4.4-dkron/ext/pdi-ce-4.4.0-stable.zip https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/pdi-ce-4.4.0-stable.zip'
                sh '[ -f docker/pdi-4.4-dkron/ext/pentaho-4.4-remocra-deps.zip ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-4.4-dkron/ext/pentaho-4.4-remocra-deps.zip https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/pentaho-4.4-remocra-deps.zip'
                sh '[ -f docker/pdi-4.4-dkron/ext/postgresql-42.2.10.jre7.jar ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-4.4-dkron/ext/postgresql-42.2.10.jre7.jar https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/postgresql-42.2.10.jre7.jar'
                sh '[ -f docker/pdi-4.4-dkron/ext/dkron_2.1.1_linux_amd64.tar.gz ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-4.4-dkron/ext/dkron_2.1.1_linux_amd64.tar.gz https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/dkron_2.1.1_linux_amd64.tar.gz'
              }
            }
          }
        }
        stage('Dependencies pdi-dkron') {
          steps {
            script {
              withCredentials([usernameColonPassword(credentialsId: 'nexus3-jenkins', variable: 'NEXUS3_AUTH')]) {
                sh '[ -f docker/pdi-dkron/ext/pdi-ce-7.1.0.0-12.zip ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-dkron/ext/pdi-ce-7.1.0.0-12.zip https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/pdi-ce-7.1.0.0-12.zip'
                sh '[ -f docker/pdi-dkron/ext/pentaho-gis-plugins-1.2.1-bin-7.zip ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-dkron/ext/pentaho-gis-plugins-1.2.1-bin-7.zip https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/pentaho-gis-plugins-1.2.1-bin-7.zip'
                sh '[ -f docker/pdi-dkron/ext/ojdbc8.jar ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-dkron/ext/ojdbc8.jar https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/ojdbc8.jar'
                sh '[ -f docker/pdi-dkron/ext/dkron_2.1.1_linux_amd64.tar.gz ] || curl --user "$NEXUS3_AUTH" -o docker/pdi-dkron/ext/dkron_2.1.1_linux_amd64.tar.gz https://nexus3-ovh.priv.atolcd.com/repository/sdis-remocra/ext/dkron_2.1.1_linux_amd64.tar.gz'
              }
            }
          }
        }
      }
    }
    stage('Build') {
      failFast true
      parallel {
        stage('Build docker remocra') {
          steps {
            script {
              docker.image('cvagner/docker-jdk-maven-sencha-cmd:8-3.6.3-3.0.2')
                .inside("-u ${user_id}:${group_id} -w /app -v ${pwd()}:/app -v /var/lib/jenkins:/var/maven -e HOME=/var/maven -e MAVEN_CONFIG=/var/maven/.m2 -e MAVEN_OPTS='-Duser.home=/var/maven'") {
                sh 'mvn clean verify -P modeinfo-able -P update'
                sh 'cp -r ./remocra/target/remocra.war ./docker/remocra/ext'
              }
            }
            script {
              remocra_image = docker.build(
                'atolcd/remocra',
                "--build-arg UID=${DOCKER_UID} --build-arg GID=${DOCKER_GID} --force-rm -f ./docker/remocra/Dockerfile ./docker/remocra"
              )
            }
          }
        }
        stage('Build docker geoserver') {
          steps {
            script {
              geoserver_image = docker.build(
                'atolcd/remocra-geoserver',
                "--build-arg UID=${DOCKER_UID} --build-arg GID=${DOCKER_GID} --force-rm -f ./docker/geoserver/Dockerfile ./docker/geoserver"
              )
            }
          }
        }
        stage('Build docker pdi-4.4-dkron') {
          steps {
            script {
              pdi44dkron_image = docker.build(
                'atolcd/remocra-pdi-4.4-dkron',
                "--build-arg UID=${DOCKER_UID} --build-arg GID=${DOCKER_GID} --force-rm -f ./docker/pdi-4.4-dkron/Dockerfile ./docker/pdi-4.4-dkron"
              )
            }
          }
        }
        stage('Build docker pdi-dkron') {
          steps {
            script {
              pdidkron_image = docker.build(
                'atolcd/remocra-pdi-dkron',
                "--build-arg UID=${DOCKER_UID} --build-arg GID=${DOCKER_GID} --force-rm -f ./docker/pdi-dkron/Dockerfile ./docker/pdi-dkron"
              )
            }
          }
        }
        stage('Build docker api-remocra') {
          steps {
            script {
              apiremocra_image = docker.build(
                'atolcd/remocra-api-remocra',
                "--build-arg UID=${DOCKER_UID} --build-arg GID=${DOCKER_GID} --force-rm -f ./api-remocra/dist/Dockerfile-image ./api-remocra/"
              )
            }
          }
        }
      }
    }
    stage('Push docker-registry : REMOCRA_VERSION & latest') {
      failFast true
      parallel {
        stage('Push remocra') {
          steps {
            script {
              if (remocra_image) {
                docker.withRegistry("${REGISTRY_DOCKER}") {
                  remocra_image.push("${REMOCRA_VERSION}")
                  remocra_image.push('latest')
                }
              }
            }
          }
        }
        stage('Push geoserver') {
          steps {
            script {
              if (geoserver_image) {
                docker.withRegistry("${REGISTRY_DOCKER}") {
                  geoserver_image.push("${REMOCRA_VERSION}")
                  geoserver_image.push('latest')
                }
              }
            }
          }
        }
        stage('Push pdi-4.4-dkron') {
          steps {
            script {
              if (pdi44dkron_image) {
                docker.withRegistry("${REGISTRY_DOCKER}") {
                  pdi44dkron_image.push("${REMOCRA_VERSION}")
                  pdi44dkron_image.push('latest')
                }
              }
            }
          }
        }
        stage('Push pdi-dkron') {
          steps {
            script {
              if (pdidkron_image) {
                docker.withRegistry("${REGISTRY_DOCKER}") {
                  pdidkron_image.push("${REMOCRA_VERSION}")
                  pdidkron_image.push('latest')
                }
              }
            }
          }
        }
        stage('Push api-remocra') {
          steps {
            script {
              if (apiremocra_image) {
                docker.withRegistry("${REGISTRY_DOCKER}") {
                  apiremocra_image.push("${REMOCRA_VERSION}")
                  apiremocra_image.push('latest')
                }
              }
            }
          }
        }
      }
    }
    stage('Clean') {
      failFast true
      parallel {
        stage('Delete image remocra') {
          steps {
            script {
              if (remocra_image) {
                sh "docker rmi -f ${remocra_image.id}"
              }
            }
          }
        }
        stage('Delete image geoserver') {
          steps {
            script {
              if (geoserver_image) {
                sh "docker rmi -f ${geoserver_image.id}"
              }
            }
          }
        }
        stage('Delete image pdi-4.4-dkron') {
          steps {
            script {
              if (pdi44dkron_image) {
                sh "docker rmi -f ${pdi44dkron_image.id}"
              }
            }
          }
        }
        stage('Delete image pdi-dkron') {
          steps {
            script {
              if (pdidkron_image) {
                sh "docker rmi -f ${pdidkron_image.id}"
              }
            }
          }
        }
        stage('Delete image api-remocra') {
          steps {
            script {
              if (apiremocra_image) {
                sh "docker rmi -f ${apiremocra_image.id}"
              }
            }
          }
        }
      }
    }
  }
  post {
    always {
      sh 'git checkout -- .'
      sh 'git clean -f -d -x -e client-ng/node_modules -e docker/geoserver/ext -e docker/pdi-4.4-dkron/ext -e docker/pdi-dkron/ext'
    }
  }
}
