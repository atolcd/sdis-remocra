#!/usr/bin/env groovy

pipeline {
  agent {
    docker {
      label 'docker'
      image 'cvagner/docker-jdk-maven-sencha-cmd:7-3.6.1-3.0.2'
      args '-v /var/lib/jenkins/.m2/settings.xml:/tmp/settings.xml:ro'
      reuseNode true
    }
  }
  stages {
    stage('Build') {
      environment {
        // Force HOME for npm
        HOME = "${env.WORKSPACE}"
      }
      steps {
        // Run the maven build (mvn is in the PATH in the Docker image)
        sh "mvn -e -Duser.home=${env.WORKSPACE} -s /tmp/settings.xml -U clean verify -P modeinfo-able"
      }
      post {
        always {
          sh "git checkout -- ."
        }
      }
    }
  }
}
