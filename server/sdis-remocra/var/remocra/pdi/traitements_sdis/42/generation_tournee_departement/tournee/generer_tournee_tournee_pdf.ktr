    <definitions>
        <definition>
        <class_type>TRANSFORM_CLASS</class_type>

        <class_name>Processor</class_name>

        <class_source><![CDATA[import java.io.File;
import java.io.FileInputStream;
import java.security.KeyStore;
import java.security.PrivateKey;
import java.security.cert.Certificate;

import com.lowagie.text.pdf.PdfReader;
import com.lowagie.text.pdf.PdfSignatureAppearance;
import com.lowagie.text.pdf.PdfStamper;


String pfxFile;
String pfxPassword;
String keyPassword;
String pdfInFile;

public boolean processRow(StepMetaInterface smi, StepDataInterface sdi) throws KettleException{

	Object[] r = getRow();

	if (r == null) {
		setOutputDone();
		return false;
	}

	if (first) {

	    first=false;
	}

    Object[] outputRow = createOutputRow(r, data.outputRowMeta.size());

	//Récupération des informations de signature
	pfxFile = get(Fields.In, "fichier_pfx").getString(r);
	pfxPassword = get(Fields.In, "mot_de_passe_pfx").getString(r);
	keyPassword = get(Fields.In, "mot_de_passe_clef").getString(r);
	pdfInFile = get(Fields.In, "fichier_pdf").getString(r);

	try{

		//Certificat
		KeyStore keyStore = KeyStore.getInstance("pkcs12");
		keyStore.load(new FileInputStream(pfxFile), pfxPassword.toCharArray());
		String alias = (String)keyStore.aliases().nextElement();
	
		// Recupération de la clef privée et de la chaine de certificats
		PrivateKey key = (PrivateKey)keyStore.getKey(alias, pfxPassword.toCharArray());
		Certificate[] chain = keyStore.getCertificateChain(alias);
		 
		// Lecture du document source
		PdfReader pdfReader = new PdfReader(new File(pdfInFile).getAbsolutePath());
		File outputFile = new File(pdfInFile.replace(".","_SIGNE."));
		
		// Creation du tampon de signature
		PdfStamper pdfStamper;
		pdfStamper = PdfStamper.createSignature(pdfReader, null, '\0', outputFile);
		PdfSignatureAppearance sap = pdfStamper.getSignatureAppearance();
		sap.setCrypto(key, chain, null, PdfSignatureAppearance.SELF_SIGNED);
		pdfStamper.setFormFlattening(true);
		pdfStamper.close();

		//Suppression du PDF non signé
		//et renommage du PDF signé
		new File(pdfInFile).delete();
		outputFile.renameTo(new File(pdfInFile));
		
	}catch (Exception e) {
		new KettleException();
	}

    putRow(data.outputRowMeta, outputRow);

	return true;
}]]></class_source>
        </definition>
